package rules

import net.breezeware.dynamo.drools.kjar.entity.Order;

rule High_Price_Discount
	lock-on-active true
    when
    $o : Order(price > 5000, discount < 2000)
    then
        System.out.println("Fire : " + kcontext.getRule().getName());
        $o.setDiscount($o.getDiscount() + 440);
        update($o);
        
end

rule Guitar_Discount
	lock-on-active true
    when
        $o : Order(item == "Guitar", discount < 2000)
    then
        System.out.println("Fire : " + kcontext.getRule().getName());
        $o.setDiscount($o.getDiscount() + 250);
        update($o);
end

